<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorButtons" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/fa_solid_900</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="OutputLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/fa_solid_900</item>
        <item name="android:textSize">40sp</item>
    </style>


    <style name="MyTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">end</item>
        <item name="android:text">0</item>
        <item name="android:textSize">80sp</item>
        <item name="android:textColor">#FFC226</item>
    </style>

    <style name="MyTextViewStyleLandscape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">top|end</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:text">0</item>
        <item name="android:textSize">80sp</item>
        <item name="android:textColor">#FFC226</item>
    </style>


</resources>
